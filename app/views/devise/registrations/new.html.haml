.section.sign-up-box
  .well.col-sm-8
    .row
      .brand-header
        = image_tag 'logo/main-logo.png', class: 'main-logo'
        %p.voiceable Voiceable
    %h1 
      = t('.welcome')
    .row
      .left.col-md-offset-3.col-md-6
        = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { honeypot: true } ) do |f|
          = f.error_notification
          -# = f.input :username, placeholder: 'Choose a username', label: false, input_html: { autocomplete: 'off' }
          = f.input :email, placeholder: I18n.t('devise.your_email'), label: false, input_html: { autocomplete: 'off' }
          = f.input :password, placeholder: I18n.t('devise.your_password'), label: false, input_html: { autocomplete: 'off' }
          = f.button :submit, I18n.t('devise.sign_up'), :class => 'btn btn-primary btn-lg cta pull-left'
          .sign_in_link
            = t('.already_signed_up')
            %a{:href => new_user_session_path} 
              = t('.time_signed_in') 
    .row.col-md-12
      .our-community
        %h2 
          = t('.you_are_part') 
