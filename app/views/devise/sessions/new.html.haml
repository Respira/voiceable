.section.sign-in
  .well.col-md-4
    %h1 Welcome back!
    = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      = f.input :email, placeholder: 'Your email', label: false
      = f.input :password, placeholder: 'Password', label: false
      = f.input :remember_me, :as => :boolean, :label => false, :inline_label => true if devise_mapping.rememberable?
      %div= f.submit "Login", :class => 'pull-right btn btn-primary btn-lg'
    .row= render "devise/shared/links"

